<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/spiner_ui"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="300sp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/pin_image"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/bestbuy" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:text="Best Buy" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <ImageView
            style="@style/info_style"
            app:srcCompat="@drawable/pin_info" />
        <TextView
            android:id="@+id/address"
            android:text="20 Glenheater Terrace, ON, CA"
            style="@style/data_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                style="@style/info_style"
                app:srcCompat="@drawable/phone_info" />
            <TextView
                android:id="@+id/phone"
                android:text="+1 (876) 598 0402"
                style="@style/data_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                style="@style/info_style"
                app:srcCompat="@drawable/time_info" />
            <TextView
                android:id="@+id/opening"
                android:text="12:00 am - 5:00 pm"
                style="@style/data_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                app:srcCompat="@drawable/web_info"
                style="@style/info_style" />
            <TextView
                android:id="@+id/website"
                android:text="www.bestbuy.ca"
                style="@style/data_info" />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>